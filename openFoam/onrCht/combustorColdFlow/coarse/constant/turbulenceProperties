FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      turbulenceProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

simulationType  LES;

LES
{
    LESModel        Smagorinsky;

    turbulence      on;

    printCoeffs     on;

    delta           cubeRootVol;

    SmagorinskyCoeffs
    {
    //  Ce
    //  Ck
        Prt        0.9;   //momentum diffusivity / thermal diffusivity = kinematic viscosity / alpha   ---> Prandtl # used to find thermal diffusivity since
    }

    cubeRootVolCoeffs
    {
        deltaCoeff      1;
    }
}


