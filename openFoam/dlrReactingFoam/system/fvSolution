FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(p|rho)"
    {
        solver          GAMG;
        nCellsInCoarsestLevel 4100;
        mergeLevels     3;
        smoother        GaussSeidel;
        tolerance       1e-6;
        relTol          0.01;
        minIter         3;
    }

    "(p|rho)Final"
    {
        $p;
        relTol          0;
    }

    "(U|e|k|nuTilda)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-6;
        relTol          0.01;
    }

    "(U|e|k|nuTilda)Final"
    {
        $U;
        relTol          0;
    }

    Yi
    {
        $hFinal;
    }

    "(phis|Ysoot|Nsoot)"
    {
        $hFinal;
    }

    "(phis|Ysoot|Nsoot)Final"
    {
        $U;
        relTol    0;
    }
}

PIMPLE
{
    momentumPredictor        yes;
    nOuterCorrectors         1;
    nCorrectors              2;
    nNonOrthogonalCorrectors 1;
}

relaxationFactors
{
    equations
    {
        ".*"  1;
    }
}

