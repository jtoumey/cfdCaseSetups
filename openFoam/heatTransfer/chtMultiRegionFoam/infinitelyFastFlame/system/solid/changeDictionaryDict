boundary
{
    minZ
    {
        type            patch;
    }
    maxZ
    {
        type            patch;
    }
}

T
{
    internalField   uniform 650;

    boundaryField
    {
        ".*"
        {
            type            zeroGradient;
        }
        solid_to_flame
        {
            type            compressible::turbulentTemperatureCoupledBaffleMixed;
            Tnbr            T;
            kappaMethod     solidThermo;
            value           uniform 650;
        }
    }
}

