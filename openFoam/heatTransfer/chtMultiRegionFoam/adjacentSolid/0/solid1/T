FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/solid1";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 650;

boundaryField
{
    maxY
    {
        type            zeroGradient;
        value           uniform 300;
    }
    minX
    {
        type            fixedValue;
        value           uniform 650;
    }
    minY
    {
        type            zeroGradient;
        value           uniform 300;
    }
    minZ
    {
        type            zeroGradient;
        value           uniform 300;
    }
    maxZ
    {
        type            zeroGradient;
        value           uniform 300;
    }
    solid1_to_solid2
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        value           uniform 0;
        Tnbr            T;
        kappaMethod     solidThermo;
    }
}


